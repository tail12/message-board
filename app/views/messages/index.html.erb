<div class="panel panel-default">
  <div class="panel-heading">
    <h1>メッセージ一覧</h1>
  </div>
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message, html: {class: 'form-horizontal'}) do |f| %>
  <div class="form-group">
    <%= f.label :name, "名前:", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control col-sm-10" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :body, "内容:", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :body ,class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>

<% end %>